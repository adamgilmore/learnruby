<h1>Products</h1>

<%= link_to 'New', new_product_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>
 
  <% @products.each do |p| %>
    <tr>
      <td><%= p.title %></td>
      <td><%= p.description %></td>
      <td><%= link_to 'Show', product_path(p) %></td>
      <td><%= link_to 'Edit', edit_product_path(p) %></td>
      <td><%= link_to 'Delete', product_path(p), method: :delete, data: { confirm: "Are you sure?" } %></td>   
    </tr>
  <% end %>
</table>